## MY ALIASES ## 

alias pmyal="echo 'emyal ezshrc evimrc lst merge vga lolfetch pac diskspace gitl extract() up() rd() cbd() cat shellcheck'"
alias emyal="vim ~/.my_aliases"
alias ezshrc="vim ~/.zshrc"
alias evimrc="vim ~/.vimrc"

alias merge="xrdb -merge ~/.Xresources"
alias vga="lspci -k | grep -A 2 -E '(VGA|3D)'"
alias lolfetch="neofetch | lolcat"
alias pac='sudo pacman -Syu'
alias diskspace="du -S | sort -n -r | less"
alias lst='tree'
alias cat='bat'
alias sl='sl | lolcat'
alias gitl='git log --pretty=oneline --abbrev-commit'

export EDITOR='vim'
export VISUAL='vim'

extract () {
   if [ -f $1 ] ; then
       case $1 in
           *.tar.bz2)   tar xvjf $1;;
           *.tar.gz)    tar xvzf $1;;
           *.bz2)       bunzip2 $1 ;;
           *.rar)       unrar x $1 ;;
           *.gz)        gunzip $1  ;;
           *.tar)       tar xvf $1 ;;
           *.tbz2)      tar xvjf $1;;
           *.tgz)       tar xvzf $1;;
           *.zip)       unzip $1   ;;
           *.Z)         uncompress $1  ;;
           *.7z)        7z x $1;;
           *) echo "don't know how to extract '$1'..." ;;
       esac
   else
       echo "'$1' is not a valid file!"
   fi
}

up() { cd $(eval printf '../'%.0s {1..$1}) && pwd; }

bd(){
    pwd > "$HOME/.lastdir_$1"
}

cbd(){
    lastdir="$(cat "$HOME/.lastdir_$1")">/dev/null 2>&1
    if [ -d "$lastdir" ]; then
        cd "$lastdir"
    else
        echo "no existing directory stored in buffer $1">&2
    fi
}

